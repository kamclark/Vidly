@model IEnumerable<Vidly.Models.Customer>

@{
    ViewBag.Title = "Customers";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


@if (!Model.Any())
{
    <p>No customers.</p>
}

else
{
    <div class="panel panel-default">
        <!-- Default panel contents -->
        <div class="panel-heading">Customers</div>
        <div class="panel-body">
            <p>About our purchasing customers.</p>
        </div>


        <!-- Table -->
        <table class="table">
            <tr>
                <th>Customer ID</th>
                <th>Customer Name</th>
            </tr>
            @foreach (var customer in Model)
            {
            <tr>
                <td>@customer.Id</td>
                <td>@Html.ActionLink(customer.Name, "CustomerDetails", "Customers",
                   new { id = customer.Id }, null)</td>
            </tr>
            }

        </table>
    </div>
}

